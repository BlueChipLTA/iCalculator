<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="LightTheme" parent="@android:style/Theme.Material.Light.DarkActionBar">
        <item name="android:windowLightStatusBar">@bool/is_light_theme</item>
        <item name="android:colorPrimary">@color/calculator_primary_color</item>
        <item name="android:colorAccent">@color/calculator_accent_color</item>
        <item name="android:titleTextColor">@android:color/white</item>
        <item name="android:statusBarColor">@color/calculator_statusbar_color</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">@bool/is_light_theme</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="att_display_formula_text_color">@color/display_formula_text_color</item>
        <item name="att_display_result_text_color">@color/display_result_text_color</item>
        <item name="att_display_background_color">@color/display_background_color</item>
        <item name="att_pad_numeric_background_color">@color/pad_numeric_background_color</item>
        <item name="att_pad_operator_text_color">@color/att_pad_operator_text_color_dark</item>
        <item name="att_pad_operator_background_color">@color/pad_operator_background_color</item>
        <item name="att_pad_advanced_background_color">@color/pad_advanced_background_color</item>
        <item name="att_pad_button_text_color">@color/pad_button_text_color</item>
        <item name="att_pad_button_advanced_text_color">@color/pad_button_advanced_text_color</item>
        <item name="att_pad_button_advanced_ripple_color">@color/pad_button_advanced_ripple_color</item>
        <item name="att_pad_button_ripple_color">@color/pad_button_ripple_color</item>
        <item name="att_display_result_exponent_text_color">@color/display_result_exponent_text_color</item>
        <item name="att_pad_button_boder_color">@color/pad_button_boder_color</item>
        <item name="att_pad_button_inv_background_color">@color/pad_button_inv_background_color</item>
        <item name="att_pad_button_inv_border_color">@color/pad_button_inv_border_color</item>
        <item name="att_drag_color">@color/drag_color</item>
        <item name="att_equal_color">@color/equal_color</item>
        <item name="att_equal_pressed_color">@color/equal_pressed_color</item>
        <item name="att_equal_text_color">@color/equal_text_color_dark</item>
        <item name="att_number_pressed_color">@color/number_pressed_color</item>
        <item name="att_border_land_color">@color/display_background_color</item>
        <item name="att_drag_background_color">@color/att_drag_background_color</item>
        <item name="att_title_mode_color">@color/att_title_mode_color</item>
        <item name="toolbar_text_color">@android:color/white</item>
        <item name="colorPopupMenuBackground">@color/popup_menu_backgound_dark</item>
        <item name="colorPopupMenuText">@color/colorPopupMenuTextDark</item>
        <item name="android:actionModeBackground">@color/att_title_mode_color</item>
        <item name="android:windowBackground">@color/display_background_color</item>
        <item name="android:colorControlNormal">#FFFFFF</item>
        <item name="android:colorControlHighlight">@color/display_toolbar_text_color</item>
    </style>

    <style name="LightTheme.Calculator">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:layoutDirection">ltr</item>
    </style>

    <style name="LightTheme.Licenses">
        <item name="android:title">@string/menu_licenses</item>
        <item name="android:windowBackground">@color/display_background_color</item>
        <item name="android:background">@color/display_background_color</item>
    </style>
    <!-- ToolBar -->
    <style name="ToolBarTheme.LightToolBarStyle" parent="@android:style/Theme.Material.Light.DarkActionBar">
        <item name="android:textColorPrimary">@color/display_toolbar_text_color</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
        <item name="android:colorControlNormal">@color/display_toolbar_text_color</item>
        <item name="android:colorControlHighlight">@color/display_toolbar_text_color</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionButtonOverflow</item>
    </style>

    <style name="ActionButtonOverflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/quantum_ic_more_vert_vd_theme_24</item>
        <item name="android:tint">@color/display_toolbar_text_color</item>
    </style>

    <style name="DialogStyle" parent="@android:style/Theme.Material.Light.Dialog">
        <item name="android:colorPrimary">@color/calculator_primary_color</item>
        <item name="android:colorAccent">@color/calculator_accent_color</item>
        <item name="android:colorBackground">@color/popup_menu_backgound_dark</item>
        <item name="android:background">@color/popup_menu_backgound_dark</item>
        <item name="android:colorControlHighlight">@color/calculator_primary_color</item>
        <item name="android:textColorPrimary">@color/colorPopupMenuTextDark</item>
        <item name="android:textColorSecondary">@color/colorPopupMenuTextDark</item>
    </style>
</resources>